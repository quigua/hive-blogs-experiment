---
// src/pages/index.astro
import PostCard from '../components/PostCard.astro';
import '../styles/global.css';

// Constantes y lógica de carga inicial de posts (server-side)
const FUNCTIONS_BASE_URL = 'https://dreamy-baklava-d17cb6.netlify.app/.netlify/functions';
const USERNAME_TO_FETCH = 'quigua';
const POSTS_PER_PAGE = 10;

let initialPosts = [];
let nextStartAuthor = '';
let nextStartPermlink = '';
let hasMorePosts = true; // Asumimos que hay más posts al inicio

try {
    const response = await fetch(`${FUNCTIONS_BASE_URL}/get-user-posts?username=${USERNAME_TO_FETCH}&limit=${POSTS_PER_PAGE}`);
    const data = await response.json();

    if (data.error) {
        console.error("Error al cargar posts iniciales (server-side):", data.error, data.details);
    } else if (data.posts && Array.isArray(data.posts)) {
        initialPosts = data.posts;
        console.log("Posts iniciales cargados (server-side):", initialPosts.length);

        // Lógica de paginación: si se cargaron menos de POSTS_PER_PAGE, no hay más.
        if (initialPosts.length < POSTS_PER_PAGE) {
            hasMorePosts = false;
        } else {
            // Si cargamos POSTS_PER_PAGE posts, el último es el punto de inicio para la siguiente página
            const lastPost = initialPosts[initialPosts.length - 1];
            nextStartAuthor = lastPost.author;
            nextStartPermlink = lastPost.permlink;
        }
    } else {
        console.warn("La respuesta de la función no contiene un array 'posts' válido:", data);
        hasMorePosts = false; // Si no hay posts o formato inválido, no hay más
    }
} catch (error) {
    console.error("Error al conectar con la función Netlify para posts iniciales (server-side):", error);
    hasMorePosts = false; // En caso de error, asumimos que no hay más posts cargables
}
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Blog de Hive - Astro</title>
</head>
<body>
    <button id="theme-toggle">Activar Modo Oscuro</button>
    <h1>Posts de Hive de @{USERNAME_TO_FETCH}</h1>

    <div id="posts-list"
        data-username={USERNAME_TO_FETCH}
        data-posts-per-page={POSTS_PER_PAGE}
        data-next-start-author={nextStartAuthor}
        data-next-start-permlink={nextStartPermlink}
        data-has-more-posts={hasMorePosts}
    >
        <h2>Últimos Posts</h2>
        <div class="post-list">
            {initialPosts.length === 0 ? (
                <p>No se encontraron posts o hubo un error al cargar.</p>
            ) : (
                initialPosts.map(post => (
                    <PostCard post={post} />
                ))
            )}
        </div>
        
        {hasMorePosts && (
            <button id="load-more-button">Cargar más posts</button>
        )}
        <p id="no-more-posts-message" style="display: {hasMorePosts ? 'none' : 'block'};">No hay más posts para cargar.</p>
    </div>

    <script src="../scripts/theme.js"></script>
    <script src="../scripts/pagination.js"></script>
</body>
</html>